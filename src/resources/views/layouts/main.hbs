
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/app.css">
    <link
      rel="icon"
      href="https://res.cloudinary.com/dwoymvppw/image/upload/v1744112829/duytan_logo_circle_jeyx7a.png"
      type="image/x-icon"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/fontawesome-free-6.7.2-web/css/all.min.css">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/combination.css">
    <script
      src="https://ajax.googleapis.com/ajax/libs/jquery/3.7.1/jquery.min.js"
    ></script>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" rel="stylesheet">
</head>
<body>
    <div id="header" class="text-uppercase d-flex align-items-center shadow">
          <div class="home-page-logo">
            <a class="navbar-brands ps-4 text-white" href="/home"><img 
            alt="Home Page" 
            src="https://res.cloudinary.com/dwoymvppw/image/upload/t_home_page_logo/v1744130637/home-page-DKTH-removebg-preview_fgnp3d.png" 
            ></a>
          </div>
        
        {{#if (eq isLogin true)}}
         <!-- Begin: Nav -->
          <div class="nav-bar">
            <ul id="nav" class="p-0 m-0">
              <li><a href="/combination/submit">Đăng ký tổ hợp</a></li>
              <li><a href="/school">Trường học</a></li>
              <li><a href="/combination/table-file">Liên hệ</a></li>
            </ul>
          </div>
         <!-- End: Nav -->
          <div class="nav-profile d-flex me me-4">
                <a
                  class="nav-link text-white mx-2 d-flex align-items-center"
                  href='/me/profile?role={{role}}'
                >
                  <img
                    class="rounded-circle me-2"
                    src="{{avatar}}"
                  />
                  <p class="m-0 text-black">{{fullName}}</p>
                </a>
              </li>
              <li class="nav-item d-flex align-items-center ms-2">
                <a
                  href="/auth/signout"
                  class="btn btn-outline-success my-2 my-sm-0"
                >Đăng Xuất</a>
          </div>
          <div class="redirect-back-fixed fixed-top">
            <div class="redirect-back d-flex align-items-center rounded-circle shadow">
                <i class="fa-solid fa-reply fs-4"></i>
            </div>
        </div>
        {{/if}}
      </div>
    {{{body}}}

    <script src="/redirectBack.js"></script>

</body>

</html>
