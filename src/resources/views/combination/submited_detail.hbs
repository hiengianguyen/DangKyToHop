<head>
    <title>Đăng Ký Tổ Hợp | Hồ Sơ Chi Tiết</title>
    <link rel="stylesheet" href="/css/school.css">
    <link rel="stylesheet" href="/css/combination.css">
    <link rel="stylesheet" href="/css/submittedDetail.css">
</head>

<div id="master">
    <div class="school-info">
        <img class="school-banner" src="https://res.cloudinary.com/dwoymvppw/image/upload/v1743963405/school_banner_second_nbdpyd.png">
        <div class="banner-container">
            <img class="school-banner-second" src="https://res.cloudinary.com/dwoymvppw/image/upload/v1743963404/school_banner_first_ezzd1f.png">
            <div class="school-info-detail fs-5">
                <img src="https://i.postimg.cc/fyNszfCN/bannertrencung.gif" alt="">
            </div>
        </div>
    </div>

    <div class="box-radius shadow">
        <div class="card-body" style="display: none;">
            {{#if submitedCombinationDetail}}
                <div class="container">
                    <legend class="mb-4">Hồ sơ học sinh đăng ký vào lớp 10</legend>

                    <div class="d-flex">
                        <div class="offical-avatar me-4 mb-3 d-flex align-items-start flex-column">
                            <label class="ms-3 avatar"><b>Ảnh thẻ:</b></label>
                            <img id="resultImage" src="{{submitedCombinationDetail.avatarLink}}" class="col col-md-2">
                        </div>

                        <div class="offical-info gy-3 m-0">
                            <div class="row">
                                <div class="full-name d-flex align-items-start flex-column">
                                    <label for="inputName" class="me-2">Họ và Tên học sinh:</label>
                                    <h4 class="mb-3"> {{submitedCombinationDetail.fullName}}</h4>
                                </div>
                                <div class="col d-flex align-items-start flex-column">
                                    <label for="inputName" >Giới tính: </label>
                                    <b style="text-transform: capitalize;" class="mb-3">{{submitedCombinationDetail.gender}}</b>
                                </div>
                                <div class="col d-flex align-items-start flex-column">
                                    <label for="inputGroupSelect01">Dân tộc: </label>
                                    <b style="text-transform: capitalize;" class="mb-3">{{submitedCombinationDetail.nation}}</b>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col d-flex align-items-start flex-column">
                                        <label for="inputName">Ngày tháng năm sinh: </label>
                                    <b style="text-transform: capitalize;" class="mb-3">{{submitedCombinationDetail.dateOfBirth}}</b>
                                </div>

                                <div class="col d-flex align-items-start flex-column">
                                    <label for="inputName">Nơi sinh: </label>
                                    <b style="text-transform: capitalize;" class="mb-3">{{submitedCombinationDetail.placeOfBirth}}</b>
                                </div>

                                <div class="col combination-1-rep">
                                    <div class="d-flex align-items-start flex-column">
                                        <label for="inputName">Nguyện vọng 1:</label>
                                        <b style="text-transform: capitalize;">{{submitedCombinationDetail.combination1}}</b>                       
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col d-flex align-items-start flex-column">
                                    <label for="inputName">Trường học cấp 2:</label> 
                                    <b style="text-transform: capitalize;" class="mb-3">{{submitedCombinationDetail.secondarySchool}}</b>
                                </div>

                                <div class="col d-flex align-items-start flex-column">
                                    <label for="inputName">Nơi ở hiện tại:</label> 
                                    <b style="text-transform: capitalize;" class="mb-3">{{submitedCombinationDetail.currentPlace}}</b>
                                </div>

                                <div class="col combination-1">
                                    <div class="d-flex align-items-start flex-column">
                                        <label for="inputName">Nguyện vọng 1:</label>
                                        <b style="text-transform: capitalize;">{{submitedCombinationDetail.combination1}}</b>                       
                                    </div>
                                </div>

                                <div class="col combination-2">
                                    <div class="d-flex align-items-start flex-column">
                                        <label for="inputName">Nguyện vọng 2:</label>
                                        <b style="text-transform: capitalize;">{{submitedCombinationDetail.combination2}}</b>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div id="info-parent" class="d-flex">
                        <div class="d-flex  align-items-start flex-column">
                            <div class="d-flex detail justify-content-center">
                                <label for="">Họ và tên cha</label>
                                <b>{{submitedCombinationDetail.fullNameDad}}</b>
                            </div>
                            <div class="d-flex detail">
                                <label for="">Họ và tên mẹ:</label>
                                <b>{{submitedCombinationDetail.fullNameMom}}</b>
                            </div>
                        </div>
                        <div class="d-flex align-items-start flex-column job-parent">
                            <div class="d-flex detail">
                                <label for="">Nghề nghiệp cha:</label>
                                <b>{{submitedCombinationDetail.jobOfDad}}</b>
                            </div>
                            <div class="d-flex detail">
                                <label for="">Nghề nghiệp mẹ:</label>
                                <b>{{submitedCombinationDetail.jobOfMom}}</b>
                            </div>
                        </div>
                        <div class="d-flex align-items-start flex-column">
                            <div class="d-flex detail">
                                <label for="">Số điện thoại cha:</label>
                                <b>{{submitedCombinationDetail.phoneOfDad}}</b>
                            </div>
                            <div class="d-flex detail">
                                <label for="inputGroupSelect01">Số điện thoại mẹ:</label>
                                <b>{{submitedCombinationDetail.phoneOfMom}}</b>
                            </div>
                        </div>
                    </div>

                    <label id="poin-offical" class="col"><p class="fw-bold">Điểm thi xết tuyển Trung học phổ thông năm học 2025 – 2026:</p></label>
                    <div class="d-flex poin-box">
                        <div class="my-2">
                            <label><b>Toán: <b class="poin">{{submitedCombinationDetail.mathScore}}</b> điểm</b></label>
                        </div>

                        <div class="my-2">
                            <label><b>Văn: <b class="poin">{{submitedCombinationDetail.literatureScore}}</b> điểm</b></label>
                        </div>

                        <div class="my-2">
                            <label><b>Anh: <b class="poin">{{submitedCombinationDetail.englishScore}}</b> điểm</b></label>
                        </div>
                    </div>

                    <label class="col table"><b>Kết quả học tập và rèn luyện cấp THCS:</b></label>
                    <div class="table-conduct">
                        <table border="1" cellspacing="0" cellpadding="3" class="table-points text-center table-bordered mb-3">
                        <tr>
                            <th rowspan="1">Lớp</th>
                            <th class="class">6</th>
                            <th class="class">7</th>
                            <th class="class">8</th>
                            <th class="class">9</th>
                            <th rowspan="2" class="type-graduate">Xếp loại tốt nghiệp THCS</th>
                        </tr>
                        
                        <tr>
                            <td>Hạnh kiểm</td>
                            <td style="text-transform: capitalize;">
                                <b>{{submitedCombinationDetail.conduct6}}</b> 
                            </td>
                            <td style="text-transform: capitalize;">
                                <b>{{submitedCombinationDetail.conduct7}}</b> 
                            </td>
                            <td style="text-transform: capitalize;">
                                <b>{{submitedCombinationDetail.conduct8}}</b> 
                            </td>
                            <td style="text-transform: capitalize;">
                                <b>{{submitedCombinationDetail.conduct9}}</b> 
                            </td>
                        </tr>
                        
                        <tr>
                            <td>Học lực</td>
                            <td style="text-transform: capitalize;">
                                <b>{{submitedCombinationDetail.academicRating6}}</b> 
                            </td>
                            <td style="text-transform: capitalize;">
                                <b>{{submitedCombinationDetail.academicRating7}}</b> 
                            </td>
                            <td style="text-transform: capitalize;">
                                <b>{{submitedCombinationDetail.academicRating8}}</b> 
                            </td>
                            <td style="text-transform: capitalize;">
                                <b>{{submitedCombinationDetail.academicRating9}}</b> 
                            </td>
                            <td style="text-transform: capitalize;">
                                <b>{{submitedCombinationDetail.graduationRating}}</b> 
                            </td>
                        </tr>
                        </table>
                    </div>

                    <label class="col table"><b>Điểm số trung bình các môn học rèn luyện cấp THCS:</b></label>
                    <div class="table-avg-poin">
                        <table border="1" cellspacing="0" cellpadding="3" class="table-points text-center table-bordered mb-4">
                            <tr>
                                <th colspan="8" class="px-3">Điểm trung bình môn cả năm lớp 9</th>
                            </tr>
                            <tbody>
                                <td class="subject"><b>Văn</b></td>
                                <td class="subject"><b>Toán</b></td>
                                <td class="subject"><b>Ngoại ngữ</b></td>
                                <td class="subject"><b>Vật lý</b></td>
                                <td class="subject"><b>Hóa học</b></td>
                                <td class="subject"><b>Sinh</b></td>
                                <td class="subject"><b>Sử</b></td>
                                <td class="subject"><b>Địa</b></td>
                            </tbody>
                            <tbody>
                                <td style="text-transform: capitalize;">
                                    <b>{{submitedCombinationDetail.avgLiteratureScore}}</b> 
                                </td>
                                <td style="text-transform: capitalize;">
                                    <b>{{submitedCombinationDetail.avgMathScore}}</b> 
                                </td>
                                <td style="text-transform: capitalize;">
                                    <b>{{submitedCombinationDetail.avgEnglishScore}}</b> 
                                </td>
                                <td style="text-transform: capitalize;">
                                    <b>{{submitedCombinationDetail.avgPhysicsScore}}</b> 
                                </td>
                                <td style="text-transform: capitalize;">
                                    <b>{{submitedCombinationDetail.avgChemistryScore}}</b> 
                                </td>
                                <td style="text-transform: capitalize;">
                                    <b>{{submitedCombinationDetail.avgBiologyScore}}</b> 
                                </td>
                                <td style="text-transform: capitalize;">
                                    <b>{{submitedCombinationDetail.avgHistoryScore}}</b> 
                                </td>
                                <td style="text-transform: capitalize;">
                                    <b>{{submitedCombinationDetail.avgGeographyScore}}</b> 
                                </td>
                            </tbody>
                        </table>
                    </div>
                        <div class="d-flex justify-content-center btn-feature gap-3 mt-4">
                            {{#if (eq role 'student')}}
                                <a href="/combination/submit-combination?role={{role}}&step=2" class="btn btn-secondary d-flex justify-content-center align-items-center">Chỉnh sửa thông tin</a>
                                <button type="button" id="btn-modal-delete" class="btn btn-danger d-flex justify-content-center align-items-center">Xoá hồ sơ này</button>
                                <a href="/file/pdf/submited/{{submitedCombinationDetail.userId}}" class="btn btn-info d-flex justify-content-center align-items-center" target="_blank">Xuất file PDF</a>
                            {{else}}
                                <a href="/file/pdf/submited/{{submitedCombinationDetail.userId}}" class="btn btn-info d-flex justify-content-center align-items-center" target="_blank">Xuất file PDF</a>
                            {{/if}}
                        </div>
                </div>
            {{else}}
                <div class="container" style="margin-top: -50px;">
                    <div class="d-flex justify-content-center align-items-center flex-column">
                        <img src="https://res.cloudinary.com/dwoymvppw/image/upload/v1749548858/no-data_bitdab.avif" alt="Không có dữ liệu" style="width: 20pc;">
                        <h3>Chưa có dữ liệu...</h3>
                        <p>Có lẽ bạn chưa đăng ký tổ hợp, hãy click <a href="/combination/submit-combination?role={{role}}">vào đây để chuyển sang trang đăng ký</a></p>
                    </div>
                </div>
            {{/if}}
        </div>
    </div>
</div>

<div class="modal" id="modal-delete-submited" style="display: none;">
  <div class="modal-container container choose-school mx-auto">
    <div class="modal-content" style="height: 10pc;">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Xoá hồ sơ</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn có chắc chắn muốn xoá hồ sơ này.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary cancel">Huỷ</button>
        <a href="/combination/delete/submited-combination/{{submitedCombinationDetail.id}}" class="btn btn-danger delete">Xoá</a>
      </div>
    </div>
  </div>
</div>
<div class="glass-overlay" style="display: none;"></div>
<div id="loading-full" class="position-fixed" style="display: flex;">
    <div class="d-flex align-items-center flex-column">
        <h2 id="tittle-loading">Đang tải hồ sơ...</h2>
        <div class="spinner-border mt-4" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
</div>

<script>
    const sideBars = document.getElementById('sidebar');
    const master = document.getElementById('master');
    window.addEventListener('load', function () {
        document.getElementById('loading-full').style.display = 'none';
        document.querySelector('.card-body').style.display = 'block';
        sideBars.style.height = master.parentElement.clientHeight;
        master.style.height = master.parentElement.clientHeight;
    });

    const litSidebars = Array.from(document.querySelectorAll('#sidebar .box'));
    litSidebars.pop();
    litSidebars.pop();

    let pageForStudent = true;
    if(litSidebars[litSidebars.length - 1].textContent === 'Hồ sơ đã nộp') {
        pageForStudent = false;
    }

    litSidebars.forEach((li) => {
        if(pageForStudent) {
            if(li.getAttribute('value') === 'Hồ sơ đã nộp') {
                li.parentElement.classList.add('active');
            } else {
                li.parentElement.classList.remove('active');
            }
        } else {
            if(li.getAttribute('value') === 'Danh sách đăng ký') {
                li.parentElement.classList.add('active');
            } else {
                li.parentElement.classList.remove('active');
            }
        }
        li.parentElement.onclick = () => {
        li.parentElement.classList.add('active')
        litSidebars.forEach((liCheckClassActive) => {
            if(liCheckClassActive !== li) {
            liCheckClassActive.parentElement.classList.remove('active');
            }
        })
        }
    })

    const btnShowModalDelete = document.getElementById('btn-modal-delete');
    const glass = document.querySelector('.glass-overlay');
    const modalDeleteSubmited = document.getElementById('modal-delete-submited');
    const modalChild = modalDeleteSubmited.querySelector('.modal-containers');
    const btnClose = modalDeleteSubmited.querySelector('button.close span');
    const btnCancel = modalDeleteSubmited.querySelector('button.cancel');
    const body = document.getElementsByTagName('body')[0];

    btnShowModalDelete.onclick = () => {
        body.style.overflowY = 'hidden';
        modalDeleteSubmited.style.display = 'flex';
        glass.style.display = 'block';
        glass.classList.add('active');
    }

    btnCancel.onclick = btnClose.onclick = () => {
        body.style.overflowY = 'auto';
        modalDeleteSubmited.style.display = 'none';
        glass.style.display = 'none';
        glass.classList.remove('active');
    }
</script>